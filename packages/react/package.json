    "description": "Enterprise-grade React component for NIS2 compliance, session timeout management, and security auditing.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nis2shield/frontend.git",
        "directory": "packages/react"
