        "@nis2shield/core": "^0.1.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.0.0",
        "jsdom": "^22.1.0",
        "typescript": "^5.0.0",
        "vite": "^4.4.0",
        "vite-plugin-dts": "^3.0.0",
        "vitest": "^0.34.0",
