{
    "name": "@nis2shield/vue-guard",
    "version": "1.1.1",
    "description": "Vue 3 wrapper for NIS2 Shield - Session Guard, Secure Storage, and Security Telemetry",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "test": "vitest run",
        "lint": "eslint src --ext .ts,.vue"
    },
    "peerDependencies": {
        "vue": ">=3.3.0"
    },
    "dependencies": {
        "@nis2shield/core": "^1.0.0"
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vue": "^3.4.0",
        "vitest": "^1.0.0",
        "happy-dom": "^13.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nis2shield/frontend.git",
        "directory": "packages/vue"
    },
    "keywords": [
        "vue",
        "vue3",
        "nis2",
        "security",
        "session-management",
        "composable"
    ],
    "author": "NIS2 Shield Team",
    "license": "MIT",
    "homepage": "https://nis2shield.com"
}